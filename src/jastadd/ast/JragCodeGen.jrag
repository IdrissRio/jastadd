  public String AttrDecl.cacheStoreCircular() {
    if (config().cacheCycle()) {
      return "(!state.IN_CIRCLE || (state.IN_CIRCLE && (!state.INTERMEDIATE_VALUE || state.LAST_CYCLE)))";
