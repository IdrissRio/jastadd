      if (getNumParameter() == 0) {
        return signature() + "_visited = -1;\n";
      } else {
        return signature() + "_visited.remove(_parameters);\n";
      }
    } else if (getNumParameter() == 0) {
      return signature() + "_visited = false;\n";
    } else {
      return signature() + "_visited.remove(_parameters);\n";
    }
  }

