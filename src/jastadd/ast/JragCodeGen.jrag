  public String ASTNode.fromReferenceType(String value, String type) {
    if (type.equals("int"))
      return "((Integer)" + value + ")";
    else if (type.equals("short"))
      return "((Short)" + value + ")";
    else if (type.equals("long"))
      return "((Long)" + value + ")";
    else if (type.equals("float"))
      return "((Float)" + value + ")";
    else if (type.equals("double"))
      return "((Double)" + value + ")";
    else if (type.equals("boolean"))
      return "((Boolean)" + value + ")";
    else if (type.equals("char"))
      return "((Character)" + value + ")";
    else
      return "(" + type + ")" + value;
  }

  public String AttrDecl.boxedType() {
    String type = getType();
    if (type.equals("int"))
      return "Integer";
    else if (type.equals("short"))
      return "Short";
    else if (type.equals("long"))
      return "Long";
    else if (type.equals("float"))
      return "Float";
    else if (type.equals("double"))
      return "Double";
    else if (type.equals("boolean"))
      return "Boolean";
    else if (type.equals("char"))
      return "Character";
    else
      return type;
  }

