ASTDecl.emitDefaultConstructor = [[
$if(JJTree)
  public #name.#name(int i) {
    super(i);
$if(#isASTNodeDecl)
    init$$Children();
$endif
    $FinalInit
  }

  public #name.#name($ParserName p, int i) {
    this(i);
    parser = p;
  }

  public #name.#name() {
    this(0);
  }
$else
  public #name.#name() {
    super();
$if(#isASTNodeDecl)
    init$$Children();
$endif
    $FinalInit
  }
$endif
]]

ASTDecl.emitChildInitMethod = [[
  /**
   * Initializes the child array to the correct size.
   * Initializes List and Opt nta children.
   * @apilevel internal
   * @ast method
   */
  public void #name.init$$Children() {
    $InitChildArray
    $ChildInit
  }
]]

OptDecl.constructor = [[
  public $Opt.$Opt(T opt) {
    $include(State.incHookConstructionStart)
    setChild(opt, 0);
    $include(State.incHookConstructionEnd)
  }
]]

# A list constructor that builds a list with all arguments
ListDecl.constructor = [[
  public $List.$List(T... initialChildren) {
    children = new $ASTNode[initialChildren.length];
    for (int i = 0; i < children.length; ++i) {
      addChild(initialChildren[i]);
    }
  }
]]

