ASTNode.emitNodeToStringMethod = [[
$if (TracingEnabled)
public static String ASTNode.nodeToString(ASTNode node) {
  return (node != null ? node.getClass().getSimpleName() : "null");
}
$endif
]]

AttrDecl.traceHookAttrCached = [[
$if (TracingEnabled)
$if(#getLazy)
$if(#isParameterized)
Tracer.traceCached(this, "#(hostClassName).#(attributeName)", "" + _parameters, "" + #(attributeSignature)_value);
$else
Tracer.traceCached(this, "#(hostClassName).#(attributeName)", "", "" + #(attributeSignature)_value);
$endif
$endif
$endif
]]

