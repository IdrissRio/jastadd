ASTNode.traceHookRewriteChange = [[
$if (TracingEnabled)
if (this.state().peek() == ASTNode$State.REWRITE_CHANGE) {
  Tracer.traceRewriteChange(this, "ASTNode.child", "" + i, 
      nodeToString(oldNode) + "->" + nodeToString(node));
}
$endif
]]

